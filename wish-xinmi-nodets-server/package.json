{
  "name": "wish-xinmi-nodets-server",
  "version": "0.1.0",
  "description": "The Xinmi Server",
  "repository": {
    "type": "git",
    "url": "https://github.com/wishzhang/wish-xinmi"
  },
  "author": "WishZhang",
  "license": "ISC",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "cross-env NODE_ENV=development DEBUG=xinmi-* nodemon --inspect dist/index.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "test": "jest --forceExit --coverage --verbose --maxConcurrency=1 --runInBand=1"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "minio": "^7.0.18",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.5.0",
    "pinyin": "^2.9.1",
    "socket.io": "^3.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/eslint": "7.2.6",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13.1",
    "@types/mysql": "^2.15.18",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
